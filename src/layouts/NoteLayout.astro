---
import '@/styles/globals.css'
import { Heading } from '@/components/Heading'
import { Avatar } from '@/components/Avatar'
import { ModeToggle } from '@/components/ModeToggle'
import { StickyNote, Slash } from 'lucide-react'

const { title } = Astro.props
const fullTitle = title ? `${title} - ` : '' + 'hikarock note'
---

<script is:inline src="/theme.js"></script>

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="noindex" />
    <title>{fullTitle}</title>
  </head>

  <body>
    <div class="container mx-auto p-8 max-w-screen-md">
      <div class="grid grid-flow-row auto-rows-max gap-16 pb-64">
        <div class="grid gap-4">
          <div class="flex justify-between gap-4">
            <div class="flex items-center gap-4">
              <Avatar client:load />
              <Heading level={1}>
                <a href="/">Hikari Tsuchiya (hikarock)</a>
                <Slash />
                <a href="/note">
                  <StickyNote />
                </a>
              </Heading>
            </div>
            <div class="flex items-center w-36px">
              <ModeToggle client:load />
            </div>
          </div>
          <div class="grid gap-1">
            <p class="leading-6">
              思ったこと、考えたこと、わかったこと、よくわからないことの記録
            </p>
          </div>
        </div>
        <div>
          <slot />
        </div>
      </div>
    </div>
  </body>

  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }
    h1 {
      color: red !important;
    }
  </style>
</html>
