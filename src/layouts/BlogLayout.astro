---
import '@/styles/globals.css'
import { Heading } from '@/components/Heading'
import { AvatarComponent } from '@/components/AvatarComponent'
import { ModeToggle } from '@/components/ModeToggle'

const { title } = Astro.props
const fullTitle = (title ? `${title} - ` : '') + 'hikarock blog'
---

<script is:inline src="@/scripts/theme.ts"></script>

<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="robots" content="noindex" />
    <title>{fullTitle}</title>
  </head>

  <body>
    <div class="container mx-auto p-8 max-w-screen-md">
      <div class="grid grid-flow-row auto-rows-max gap-16 pb-64">
        <div class="grid gap-4">
          <div class="flex justify-between gap-4">
            <div class="flex items-center gap-4">
              <AvatarComponent
                client:load
                src="https://github.com/hikarock.png"
                alt="hikarock"
              />
              <Heading level={1}>
                <a href="/blog">hikarock blog</a>
              </Heading>
            </div>
            <div class="flex items-center w-36px">
              <ModeToggle client:load />
            </div>
          </div>
        </div>

        <div>
          <slot />
        </div>
      </div>
    </div>
  </body>

  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }
    h1 {
      color: red !important;
    }
  </style>
</html>
